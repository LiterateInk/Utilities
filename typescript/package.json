{
  "name": "@literate.ink/utilities",
  "version": "1.1.0",
  "description": "A general package containing utilities for helping building our libraries.",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "release": "release-it",
    "build": "tsup",
    "lint": "tsc"
  },
  "files": [
    "dist"
  ],
  "author": "Mikkel ALMONTE--RINGAUD <mikkel@milescode.dev> (https://github.com/Vexcited)",
  "repository": "github:LiterateInk/Utilities",
  "homepage": "https://docs.literate.ink/utilities",
  "bugs": {
    "url": "https://github.com/LiterateInk/Utilities/issues"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagAnnotation": "Release v${version}",
      "tagName": "js-v${version}"
    },
    "github": {
      "release": true,
      "draft": false,
      "releaseName": "js v${version}"
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "before:init": "pnpm lint",
      "after:bump": "pnpm build"
    }
  },
  "devDependencies": {
    "release-it": "^17.5.0",
    "terser": "^5.31.2",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=16"
  }
}